@model PageDto

<form method="post">
    <select name="specialtyId">
        @foreach (var specialty in Model.Class)
        {
            <option value="@specialty.Id">@specialty.Name</option>
        }
    </select>
    <input type="submit" value="Show Students" />
</form>

@if (Model.Students != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Студенты</th>
                @foreach (var students in Model.Students)
                {
                    @foreach (var subject in students.Grades)
                    {
                        <th>@subject.SubjectName</th>
                    }
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Students)
            {
                <tr>
                    <td>@student.Name</td>
                    @foreach (var subject in student.Grades)
                    {
                        var grade = student.Grades.FirstOrDefault(g => g.Id == subject.Id);
                        <td>
                            @if (grade != null)
                            {
                                @grade.Value
                                <a asp-action="UpdateGrade" asp-route-gradeId="@grade.Id" asp-route-newValue="5">Update Grade</a>
                            }
                            else
                            {
                                <span>No grade</span>
                            }
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}